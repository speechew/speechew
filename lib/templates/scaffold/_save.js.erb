$("ul.errors").html("")
<%% if @<%= singular_table_name.downcase %>.errors.any? %>
  <%% @<%= singular_table_name.downcase %>.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%%= message.html_safe %>"))
  <%% end %>
<%% else %>  
  $('#<%= plural_table_name.downcase.dasherize %>-table').DataTable().ajax.reload();
  $("#global-modal").modal("hide")
<%% end %>