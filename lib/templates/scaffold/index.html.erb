<div class="d-flex flex-column flex-lg-row ">
  <div class="mr-auto">
    <h3><%= plural_table_name.humanize.titleize %></h3> 
  </div>
  <p><%% if can? :create, <%= singular_table_name.camelize %> %><%%= link_to "New <%= singular_table_name.humanize.titleize %>", new_<%= singular_table_name.downcase %>_path, remote: true, class: "btn btn-xs btn-primary" %><%% end %></p>
</div>

<div class="col-md-12">
  <div class="panel panel-inverse">
    <div class="panel-body">    
      <table id="<%= plural_table_name.dasherize.downcase %>-table" data-source="<%%= <%= plural_table_name.downcase %>_path(format: :json) %>" class="table table-striped table-bordered dataTable no-footer" width="100%">
        <thead>
          <tr>
<% attributes.reject{ |a| a.name == "deleted"}.reject(&:password_digest?).each do |attribute| -%>
            <th><%= attribute.human_name %></th>
<% end -%>
		    <th>Operations</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>	
    </div>
  </div>
</div>