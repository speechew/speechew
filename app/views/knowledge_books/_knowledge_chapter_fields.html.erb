<div class="card shadow mb-2 nested-fields">
  <div class="card-body">
<div class="row mb-4">
	<div class="col-md-12">
		<%= f.label :title, class: 'control-label' %>
		<%= f.text_field :title, class: "form-control",required: true %>
	</div>
	<div class="col-md-12">
		<%= f.label :content, class: 'control-label' %>
		<%= f.rich_text_area :content, class: "editor-min-height",required: true %>
	</div>
	<div class="col-md-12 mt-2" style="align-items: right;">
	  	<%=link_to_remove_association "Delete this chapter", f, class: "btn btn-danger float-right" %>
	</div>

</div>
</div>
</div>