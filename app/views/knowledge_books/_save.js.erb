$("ul.errors").html("")
<% if @knowledge_book.errors.any? %>
  <% @knowledge_book.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>  
  $('#knowledge-books-table').DataTable().ajax.reload();
  $("#global-modal").modal("hide")
<% end %>