$("ul.errors").html("");
$("ul.errors").removeClass("alert");
$("ul.errors").removeClass("alert-danger");
<% if @user.errors.any? %>
$("ul.errors").addClass("alert");
$("ul.errors").addClass("alert-danger");
  <% @user.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% end %> 