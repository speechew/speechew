		<div class="panel-heading">
			<h4 class="panel-title">Main Details</h4>
		</div>
		<div class="panel-body">

						<p>
			  <strong>Code:</strong>
			  <%= @page.code %>
			</p>
			
						<p>
			  <strong>Title:</strong>
			  <%= @page.title %>
			</p>
			
						<p>
			  <strong>Content:</strong>
			  <%= @page.content %>
			</p>
			
						<%= link_to 'Edit', edit_page_path(@page) %> |
