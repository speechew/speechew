<div class="row">
	<div class="col-md-12">
		<div class="card shadow mb-4">
			<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
				<h3 class="m-0 font-weight-bold text-primary">Suggestions that are not yet replied or read</h3>
			</div>
			<div class="card-body">
				<ul id="conversations-list" class="list-group">
			<% @conversations.each do |conversation| %>
			<%= render 'conversations/conversation', conversation: conversation, user: current_user %>
			<% end %>
		</ul>
			</div>
		</div>
		

	</div>
</div>