    <%= link_to "New Article", new_article_path, class: "btn btn-xs btn-primary" %>
    <% end %>
    </p>
</div>

<div class="col-md-12">
  <div class="panel panel-inverse">
    <div class="panel-body">    
      <table id="admin-articles-table" data-source="<%= all_articles_path(format: :json) %>" class="table table-striped table-bordered dataTable no-footer" width="100%">
        <thead>
          <tr>
            <th>Title</th>
            <th>Categories</th>
            <th>Editor</th>
            <th>Status</th>
		        <th>Operations</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>	
    </div>
  </div>
</div>