$("ul.errors").html("")
<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>  
  $('#articles-table').DataTable().ajax.reload();
  $("#global-modal").modal("hide")
<% end %>