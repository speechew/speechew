<%= form_for(@language, remote: true, html: {class: :language_form, class: "form-horizontal", style: "display:inline;" }) do |f| %>
<div class="modal-body">
  <ul class="errors"></ul>
  <div class="row">
    <div class="form-group col-md-6">
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :language_code, class: "control-label" %>
      <%= f.text_field :language_code, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="modal-footer">
  <%= f.submit "Save Language", class: "btn btn-primary" %>
  <%= link_to "Cancel", "#", class: "btn btn-secondary", data: {dismiss: "modal"} %>
</div>
</div>
<% end %>
