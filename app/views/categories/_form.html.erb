<%= form_for(@category, remote: true, html: {class: :category_form, class: "form-horizontal", style: "display:inline;" }) do |f| %>
  <div class="modal-body">
  <ul class="errors"></ul>

  <div class="form-group col-md-6">
    <%= f.label :name, class: "control-label" %>
	  <%= f.text_field :name, class: 'form-control', required: true %>
	</div>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save Category", class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn btn-secondary", data: {dismiss: "modal"} %>
  </div>
  </div>
<% end %>
